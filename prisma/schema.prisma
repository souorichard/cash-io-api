generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  phone    String

  team         Team?         @relation("OwnerTeam")
  transactions Transaction[] @relation("OwnerTransaction")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id          String  @id @default(cuid())
  name        String
  description String?

  manager   User   @relation("OwnerTeam", fields: [managerId], references: [id], onDelete: Cascade)
  managerId String @unique

  transactions Transaction[] @relation("TeamTransactions")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id            String @id @default(cuid())
  description   String
  category      String
  type          String
  amountInCents Int

  createdBy   User   @relation("OwnerTransaction", fields: [createdById], references: [id], onDelete: Cascade)
  createdById String

  team   Team   @relation("TeamTransactions", fields: [teamId], references: [id], onDelete: Cascade)
  teamId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
