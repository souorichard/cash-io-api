model Transaction {
  id          String @id @default(cuid())
  description String
  category    String
  type        String
  amount      Int

  createdBy   User   @relation("OwnerTransaction", fields: [createdById], references: [id], onDelete: Cascade)
  createdById String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
